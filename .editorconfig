# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = "utf-8"
curly_bracket_next_line = false
quote_type = "single"
spaces_around_brackets = "outside"
spaces_around_operators = true
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
